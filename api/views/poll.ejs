            <form action="/poll/createpoll" method="POST">

<div class="min-h-screen bg-gray-100 flex items-center">
    <div class="container mx-auto max-w-md shadow-md hover:shadow-lg transition duration-300">
      <div class="py-12 p-10 bg-white rounded-xl">
        <div class="mb-6">
          <label class="mr-4 text-gray-700 font-bold inline-block mb-2"  for="name">Poll Name</label>
          <input type="text" name="pollName" class="border bg-gray-100 py-2 px-4 w-96 outline-none focus:ring-2 focus:ring-indigo-400 rounded" placeholder="ex: Survey Poll" />
        </div>
        <div class="">
          <label class="mr-4 text-gray-700 font-bold inline-block mb-2"  for="name">Question</label>
          <input type="text" name="question" class="border bg-gray-100 py-2 px-4 w-96 outline-none focus:ring-2 focus:ring-indigo-400 rounded" placeholder="ex: Which platform is good for beginners ?" />
        </div>
        <div class="">
            <label class="mr-4 text-gray-700 font-bold inline-block mb-2"  for="name">Option A</label>
            <input type="text" name="optionA" class="border bg-gray-100 py-2 px-4 w-96 outline-none focus:ring-2 focus:ring-indigo-400 rounded" placeholder="ex: Codeforces" />
          </div>
          <div class="">
            <label class="mr-4 text-gray-700 font-bold inline-block mb-2"  for="name">Option B</label>
            <input type="text" name="optionB" class="border bg-gray-100 py-2 px-4 w-96 outline-none focus:ring-2 focus:ring-indigo-400 rounded" placeholder="ex: Codechef" />
          </div>
          <div class="">
            <label class="mr-4 text-gray-700 font-bold inline-block mb-2"  for="name">Option C</label>
            <input type="text" name="optionC" class="border bg-gray-100 py-2 px-4 w-96 outline-none focus:ring-2 focus:ring-indigo-400 rounded" placeholder="ex: Gfg" />
          </div>
          <div class="">
            <label class="mr-4 text-gray-700 font-bold inline-block mb-2"  for="name">Option D</label>
            <input type="text" name="optionD" class="border bg-gray-100 py-2 px-4 w-96 outline-none focus:ring-2 focus:ring-indigo-400 rounded" placeholder="ex: Hackerrank" />
          </div>
        <input type="submit" class="w-full mt-6 text-indigo-50 font-bold bg-indigo-600 py-3 rounded-md hover:bg-indigo-500 transition duration-300" value="POLL UP">
      </div>
    </div>
  </div>

</form>   



