<!-- component -->

<!-- component -->

<%if(blog){%>

<div class="py-12">
    <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
        <div class="bg-white overflow-hidden shadow-sm sm:rounded-lg">
            <div class="p-6 bg-white border-b border-gray-200">
                <form method="POST" action="/updateblog/<%=blog.id%>">
                    <div class="mb-4">
                        <label class="text-xl text-gray-600">Title <span class="text-red-500">*</span></label></br>
                        <input type="text" class="border-2 border-gray-300 p-2 w-full" name="title" id="title" value="<%=blog.title%>" required>
                    </div>
                    <input type="hidden" name="userid" value="<%=locals.user.id%>">
                    <div class="mb-4">
                        <label class="text-xl text-gray-600">Description</label></br>
                        <input type="text" class="border-2 border-gray-300 p-2 w-full" name="description" value="<%=blog.description%>" id="description" placeholder="(Optional)">
                    </div>

                    <div class="mb-8">
                        <label class="text-xl text-gray-600" >Content <span class="text-red-500">*</span></label></br>
                        <textarea name="content" placeholder="Type the content here!" class="border-2 border-gray-500">
                            
                        </textarea>
                    </div>
<input type="hidden" id="cont" value="<%=blog.content%>">
                    <div class="flex p-1">
                       
                        <button role="submit" class="p-3 bg-blue-500 text-white hover:bg-blue-400" required>Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<%}else{%>

    <div class="py-12">
        <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
            <div class="bg-white overflow-hidden shadow-sm sm:rounded-lg">
                <div class="p-6 bg-white border-b border-gray-200">
                    <form method="POST" action="/saveblog">
                        <div class="mb-4">
                            <label class="text-xl text-gray-600">Title <span class="text-red-500">*</span></label></br>
                            <input type="text" class="border-2 border-gray-300 p-2 w-full" name="title" id="title" value="" required>
                        </div>
                        <input type="hidden" name="userid" value="<%=locals.user.id%>">
                        <div class="mb-4">
                            <label class="text-xl text-gray-600">Description</label></br>
                            <input type="text" class="border-2 border-gray-300 p-2 w-full" name="description" id="description" placeholder="(Optional)">
                        </div>
    
                        <div class="mb-8">
                            <label class="text-xl text-gray-600">Content <span class="text-red-500">*</span></label></br>
                            <textarea name="content" class="border-2 border-gray-500">
                                
                            </textarea>
                        </div>
    
                        <div class="flex p-1">
                           
                            <button role="submit" class="p-3 bg-blue-500 text-white hover:bg-blue-400" required>Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%}%>
<script src="https://cdn.ckeditor.com/4.16.0/standard/ckeditor.js"></script>


<%if(blog){%>
<script>
CKEDITOR.replace( 'content' );
var str = document.getElementById('cont').value
CKEDITOR.instances['content'].setData(str)
    
</script>
<%}else{%>

<script>
CKEDITOR.replace( 'content' );

    
</script>
    <%}%>
